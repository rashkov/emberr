<div class="well">
	<form {{action 'submit'}}>
		<div class="form-group">
			<label for="inputName">Name</label>
			{{input type="email" class="form-control" placeholder="Name" value=name}}
		</div>
		<div class="form-group">
			<label for="inputComment">Comment</label>
			{{textarea class="form-control" placeholder="Comment" value=comment}}
		</div>
		<button type="submit" class="btn btn-default">Submit</button>
	</form>
</div>
