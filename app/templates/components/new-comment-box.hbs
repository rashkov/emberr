{{#if isAuthenticated}}
  {{#if showCommentBox}}
    <div class="well comment-box-well">
      <span class="comment-box-close glyphicon glyphicon-remove" aria-hidden="true" {{action 'commentClose'}}></span>
      <form {{action 'submit' on='submit'}}>
        <div class="form-group">
          <label for="inputComment">Comment</label>
          {{textarea class="form-control" placeholder="Comment" value=comment}}
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
    </div>
  {{else}}
    <button class="btn btn-default" {{action 'replyClicked'}}>Reply</button>
  {{/if}}
{{else}}
  {{link-to 'Reply' 'login' tagName='button' class='btn btn-default'}}
{{/if}}
