<form {{action 'submit' on='submit'}}>
  <div class="form-group">
    <label for="title">Title</label>
    {{input value=title type="title" class="form-control" id="title" name="title" autofocus="true"}}
  </div>
  <div class="form-group">
    <label for="body">Body</label>
    {{textarea value=body class="form-control" rows="15" id="body" name="body"}}
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>
